---
const { name, distribution, url, an, al } = Astro.props
---

<li class="link-card">
  <a href={`/${url}`} {name}>
    <img
      src={`./${url}.avif`}
      alt={name}
      width={an}
      height={al}
      loading="lazy"
    />

    <div class="data">
      <h3>{name}</h3>
      <p>
        {distribution}
      </p>
    </div>
  </a>
</li>
<style>
  .link-card {
    display: flex;
    list-style: none;
    background-size: 400%;
    border-radius: 0.5rem;
    background-position: 100%;
    transition: all 0.6s cubic-bezier(0.22, 1, 0.36, 1);
    overflow: hidden;
  }

  .link-card > a {
    width: 100%;
    opacity: 0.8;
    line-height: 1.4;
    border-radius: 0.35rem;
    text-decoration: none;
    background-color: white;
    color: var(--text-color);
  }

  img {
    width: 100%;
    height: auto;
    border-radius: 0.3rem 0.3rem 0 0;
    aspect-ratio-box: auto;
    transition: all 0.6s cubic-bezier(0.22, 1, 0.36, 1);
  }

  .link-card:is(:hover) img {
    transform: scale(1.05);
  }

  .link-card .data {
    gap: 1.5ch;
    padding: 1.5ch;
    display: flex;
    flex-direction: column;
  }

  .link-card:is(:hover) h3 {
    color: var(--color-primary);
    transition: 0.6s cubic-bezier(0.22, 1, 0.36, 1);
  }
</style>
