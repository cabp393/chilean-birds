---
import Footer from '../components/Footer.astro'
import Navbar from '../components/Navbar.astro'
import ScrollUp from '../components/ScrollUp.astro'

const {
  title = 'Chilean birds',
  description = 'From the high Andean plateau at the edge of the most dry desert in the world to the current in the central Pacific coast.',
} = Astro.props
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <title>{title}</title>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  </head>
  <body>
    <Navbar />
    <slot />
    <Footer />
    <ScrollUp />

    <style>
      :root {
        --font-size-base: clamp(1rem, 0.34vw + 0.91rem, 1.19rem);
        --font-size-lg: clamp(1.2rem, 0.7vw + 1.2rem, 1.5rem);
        --font-size-xl: clamp(2.44rem, 2.38vw + 1.85rem, 3.75rem);

        --color-text: #0b0a0a;
        --color-bg: #f5f0f0;
        --color-border: #dddddd;

        --color-primary: #16689f;
        --color-secondary: #04264c;
        --astro-gradient: linear-gradient(
          -30deg,
          var(--color-secondary),
          var(--color-primary)
        );
      }

      html {
        font-family: system-ui, sans-serif;
        color: var(--color-text);
        background-color: var(--color-bg);
        scroll-behavior: smooth;
      }

      body {
        margin: auto;
        padding: 1em;
        max-width: 85ch;
        position: relative;
      }

      :global(h1) {
        font-size: var(--font-size-xl);
        margin: 0;
      }

      :global(h2) {
        font-size: var(--font-size-lg);
        margin: 3ch 0 1ch 0;
        opacity: 0.8;
      }

      :global(h3) {
        margin: 0;
      }

      :global(p) {
        margin: 0;
        opacity: 0.8;
        line-height: 1.6;
      }

      :global(td, th) {
        opacity: 0.8;
        text-align: left;
      }

      :global(input, textarea, button, select, a) {
        -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
      }
    </style>
  </body>
</html>
